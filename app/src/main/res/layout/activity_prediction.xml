<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"
    android:overScrollMode="never"
    android:padding="20dp"
    tools:context=".Prediction">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        android:orientation="vertical"
        android:gravity="center">


        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginTop="-55dp"
            app:lottie_rawRes="@raw/prediction"
            app:lottie_autoPlay="true"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Your result is ready"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="#F84848"
            android:gravity="center"
            android:fontFamily="@font/merriweather_black"/>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:padding="10dp"
            android:layout_marginTop="20dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="10dp"
            android:backgroundTint="#F84848">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_gravity="center">
                <TextView
                    android:id="@+id/heart"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Heart Disease Prediction"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:fontFamily="@font/merriweather_bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Accuracy percentage 94%"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/merriweather_light"/>
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_marginTop="35dp"
            android:layout_width="250dp"
            android:layout_height="250dp"
            app:cardBackgroundColor="#FF2222"
            app:cardCornerRadius="125dp"
            android:elevation="20dp"
            android:layout_gravity="center">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/heart_predict"

                android:contentDescription="predictionimage"/>



            <TextView
                android:id="@+id/result"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Result"
                android:textSize="40sp"
                android:textStyle="bold"
                android:layout_gravity="center_vertical"
                android:textColor="#3F51B5"
                android:gravity="center"
                android:fontFamily="@font/merriweather_black"/>

            <!-- Your content inside the circular CardView -->

        </androidx.cardview.widget.CardView>

<!--        <Button-->
<!--            android:id="@+id/backbtn"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_marginTop="25dp"-->
<!--            android:text="Back"/>-->


    </LinearLayout>





</ScrollView>